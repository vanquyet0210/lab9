import cv2 as cv
import matplotlib.pyplot as plt

# 1. Đọc ảnh xám
img = cv.imread("gradient.png", cv.IMREAD_GRAYSCALE)
assert img is not None, "Không đọc được ảnh gradient.png"

# 2. Áp dụng các kiểu threshold
_, thresh1 = cv.threshold(img, 127, 255, cv.THRESH_BINARY)
_, thresh2 = cv.threshold(img, 127, 255, cv.THRESH_BINARY_INV)
_, thresh3 = cv.threshold(img, 127, 255, cv.THRESH_TRUNC)
_, thresh4 = cv.threshold(img, 127, 255, cv.THRESH_TOZERO)
_, thresh5 = cv.threshold(img, 127, 255, cv.THRESH_TOZERO_INV)

# 3. Hiển thị kết quả
titles = [
    "Original",
    "BINARY",
    "BINARY_INV",
    "TRUNC",
    "TOZERO",
    "TOZERO_INV"
]

images = [img, thresh1, thresh2, thresh3, thresh4, thresh5]

plt.figure(figsize=(10,6))
for i in range(6):
    plt.subplot(2,3,i+1)
    plt.imshow(images[i], cmap="gray", vmin=0, vmax=255)
    plt.title(titles[i])
    plt.axis("off")

plt.tight_layout()
plt.show()



import cv2 as cv
import matplotlib.pyplot as plt

# 1. Đọc ảnh xám
img = cv.imread("sudoku.png", cv.IMREAD_GRAYSCALE)
assert img is not None, "Không đọc được ảnh sudoku.png"

# 2. Khử nhiễu nhẹ
img_blur = cv.medianBlur(img, 5)

# 3. Global threshold (so sánh)
_, th_global = cv.threshold(img_blur, 127, 255, cv.THRESH_BINARY)

# 4. Adaptive Mean
th_mean = cv.adaptiveThreshold(
    img_blur, 255,
    cv.ADAPTIVE_THRESH_MEAN_C,
    cv.THRESH_BINARY,
    11, 2
)

# 5. Adaptive Gaussian
th_gaussian = cv.adaptiveThreshold(
    img_blur, 255,
    cv.ADAPTIVE_THRESH_GAUSSIAN_C,
    cv.THRESH_BINARY,
    11, 2
)

# 6. Hiển thị kết quả
titles = [
    "Original",
    "Global Threshold",
    "Adaptive Mean",
    "Adaptive Gaussian"
]

images = [img, th_global, th_mean, th_gaussian]

plt.figure(figsize=(8,8))
for i in range(4):
    plt.subplot(2,2,i+1)
    plt.imshow(images[i], cmap="gray")
    plt.title(titles[i])
    plt.axis("off")

plt.tight_layout()
plt.show()


import cv2 as cv
import matplotlib.pyplot as plt

# 1. Đọc ảnh xám
img = cv.imread("sudoku.png", cv.IMREAD_GRAYSCALE)
assert img is not None, "Không đọc được ảnh sudoku.png"

# 2. Lọc nhiễu (rất quan trọng với Otsu)
blur = cv.GaussianBlur(img, (5, 5), 0)

# 3. Otsu thresholding
ret, otsu = cv.threshold(
    blur,
    0, 255,
    cv.THRESH_BINARY + cv.THRESH_OTSU
)

print("Giá trị threshold do Otsu tìm được:", ret)

# 4. Hiển thị kết quả
titles = ["Original Sudoku", "Gaussian Blur", "Otsu Threshold"]
images = [img, blur, otsu]

plt.figure(figsize=(9,3))
for i in range(3):
    plt.subplot(1,3,i+1)
    plt.imshow(images[i], cmap="gray")
    plt.title(titles[i])
    plt.axis("off")

plt.tight_layout()
plt.show()
